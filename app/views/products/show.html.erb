<script type="text/javascript" src="/gallery_view/js/jquery.timers-1.2.js"></script>
<script type="text/javascript" src="/gallery_view/js/jquery.easing.1.3.js"></script>
<script type="text/javascript" src="/gallery_view/js/jquery.galleryview-3.0-dev.js"></script>
<link rel="stylesheet" type="text/css" href="/gallery_view/css/jquery.galleryview-3.0-dev.css" media="screen" />
<link rel="stylesheet" href="/css/detail.css" />

<script>
$(window).load(function() {
	mCustomScrollbars();
});

function mCustomScrollbars(){
	/* 
	malihu custom scrollbar function parameters: 
	1) scroll type (values: "vertical" or "horizontal")
	2) scroll easing amount (0 for no easing) 
	3) scroll easing type 
	4) extra bottom scrolling space for vertical scroll type only (minimum value: 1)
	5) scrollbar height/width adjustment (values: "auto" or "fixed")
	6) mouse-wheel support (values: "yes" or "no")
	7) scrolling via buttons support (values: "yes" or "no")
	8) buttons scrolling speed (values: 1-20, 1 being the slowest)
	*/
	$("#mcs_container").mCustomScrollbar("vertical",400,"easeOutCirc",1.05,"auto","yes","yes",10); 
}

$(function(){
	$('#myGallery').galleryView({
		panel_width: 400,
		panel_height: 550,
	});
});

(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=112651685520077";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>
<script src="/jquery_custom_scroller/jquery.mCustomScrollbar.js" type="text/javascript"></script>
<div id="fb-root"></div>
<div id="left" style="float: left; margin-right: 10px;">
	<div id="myGallery">
		<% @product_gallery.each do |product_gallery| %>
			<li><img src="/assets/<%= product_gallery.file_name %>" title="<%= @product.product_name %>" /></li>
		<% end %>
	</div>
</div>

<div id="right" >
	<div style="text-align: center;" id="logo">
		<img src="/assets/<%= @product.product_id %>.gif">
	</div>
	<div id="product_info" style="float:left; margin-right:5px;">
		<p>
		  <b>Products name:</b>
		  <%= @product.product_name %>
		</p>
		<p>
		  <b>Series name:</b>
		  <%= @product.series_name %>
		</p>
		<p>
		  <b>Price:</b>
		  <%= @product.price %>
		</p>
	</div>
	<div style="margin-top:10px; margin-bottom: 10px;"class="fb-like" data-href="http://<%= request.host %>:<%= request.port %>/products/<%= @product.product_id %>" data-send="true" data-layout="box_count" data-width="20" data-show-faces="true"></div>
	<div style="overflow-y: scroll; height:250px;" class="fb-comments" data-href="http://<%= request.host %>:<%= request.port %>/products/<%= @product.product_id %>" data-num-posts="10" data-width="320"></div>
</div>



